script PlayersHouse_Eirika_Waiting{
		lockall

	checkplayergender
  	if (var(VAR_RESULT) == MALE) {
		applymovement(2, KurosibaTown_ProfessorsLab_Movement_JumpInPlaceRight)
		waitmovement(0)
		applymovement(2, KurosibaTown_ProfessorsLab_Movement_JumpInPlaceRight)
		waitmovement(0)
		msgbox(PlayersHouse_Eirika_Waiting_Text)
		closemessage
	} else {
	  	applymovement(2, Common_Movement_EmoteEllipsis)
		waitmovement(0)
		delay(60)
		msgbox(PlayersHouse_Eric_Waiting_Text)
		closemessage
	}

		applymovement(2, Rival_Leaves_House_Movement)
		waitmovement(0)
		playse(SE_EXIT)
		setvar(VAR_LITTLEROOT_RIVAL_STATE, 1)
		removeobject(2)
		setflag(FLAG_HIDE_LITTLEROOT_TOWN_MAYS_HOUSE_MAY)
		end
}

script PlayerHouse_MaidJinky_EventScript{
	lock
	faceplayer

	if(flag(FLAG_RECEIVED_FRESH_WATER_JINKY) == false){
		 goto(PlayersHouse_MaidJinky_FreshWater)
	} else {
	 	if(flag(FLAG_MAID_GIFT_READY)){
		 	goto(PlayersHouse_MaidJinky_BadgeItem)
  	} else {
		 	msgbox(PlayerHouse_MaidJinky_GreetingText)
		 }
	}
	closemessage
	release
	end
}

script PlayersHouse_MaidJinky_FreshWater{
	msgbox(PlayerHouse_MaidJinky_FreshWater_Text)
	giveitem(ITEM_FRESH_WATER)
	setflag(FLAG_RECEIVED_FRESH_WATER_JINKY)
	msgbox(PlayerHouse_MaidJinky_GreetingText)
	closemessage
	release
	end
}

script PlayersHouse_MaidJinky_BadgeItem{
	msgbox(PlayerHouse_MaidJinky_Badges_Text)

	switch (var(VAR_NO_OF_BADGES)) {
			case 1:
			giveitem(ITEM_RARE_CANDY)

			case 2:
			giveitem(ITEM_ANTIDOTE,10)

			case 3:
			giveitem(ITEM_AWAKENING,10)

			case 4:
			giveitem(ITEM_NUGGET)

			case 5:
			giveitem(ITEM_ULTRA_BALL,10)

			case 6:
			giveitem(ITEM_PARALYZE_HEAL, 10)

			case 7:
			giveitem(ITEM_REVIVE, 10)

			case 8:
			giveitem(ITEM_MAX_REVIVE, 3)

			default:
				msgbox(PlayerHouse_MaidJinky_GreetingText)
	}

	clearflag(FLAG_MAID_GIFT_READY)
	msgbox(PlayerHouse_MaidJinky_GreetingText_Badges)
	closemessage
	release
	end
}

